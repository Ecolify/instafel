<?xml version="1.0" encoding="utf-8"?>
<me.mamiiblt.instafel.ui.Page
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.mamiiblt.instafel.activity.devmode.ifl_a_devmode">

    <me.mamiiblt.instafel.ui.PageTitle
        android:id="@+id/ifl_page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ifl_attr_ui_titleText="@string/ifl_a11_62" />

    <me.mamiiblt.instafel.ui.PageContentArea
        android:id="@+id/ifl_page_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ifl_page_title">

        <me.mamiiblt.instafel.ui.TileLarge
            android:id="@+id/ifl_tile_backup_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ifl_attr_ui_iconRes="@drawable/ifl_backup"
            app:ifl_attr_ui_spaceBottom="visible"
            app:ifl_attr_ui_subtitleText="@string/ifl_a11_68"
            app:ifl_attr_ui_titleText="@string/ifl_a11_66" />

        <me.mamiiblt.instafel.ui.TileLarge
            android:id="@+id/ifl_tile_backup_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ifl_attr_ui_iconRes="@drawable/ifl_backup"
            app:ifl_attr_ui_spaceBottom="visible"
            app:ifl_attr_ui_subtitleText="@string/ifl_a11_68"
            app:ifl_attr_ui_titleText="@string/ifl_a11_67" />
    </me.mamiiblt.instafel.ui.PageContentArea>


    <LinearLayout
        android:id="@+id/ifl_start_compare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ifl_button_background"
        app:layout_constraintBottom_toBottomOf="@+id/ifl_page_area"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/ifl_button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/ifl_a11_69"
            android:textAlignment="center"
            android:textColor="?ifl_attr_subtitle_color" />
    </LinearLayout>
</me.mamiiblt.instafel.ui.Page>