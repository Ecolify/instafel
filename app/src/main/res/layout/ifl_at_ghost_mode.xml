            app:ifl_attr_ui_subtitleText="@string/ifl_ghost_viewonce_desc" 
            app:ifl_attr_ui_titleText="@string/ifl_ghost_viewonce_title" />

        <!-- Ghost Story -->
        <instafel.app.ui.TileLargeSwitch 
            android:id="@+id/ifl_tile_ghost_story" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
            app:ifl_attr_ui_spaceBottom="visible" 
            app:ifl_attr_ui_subtitleText="@string/ifl_ghost_story_desc" 
            app:ifl_attr_ui_titleText="@string/ifl_ghost_story_title" />

        <!-- Ghost Live -->
        <instafel.app.ui.TileLargeSwitch 
            android:id="@+id/ifl_tile_ghost_live" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
