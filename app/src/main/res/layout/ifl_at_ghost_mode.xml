<?xml version="1.0" encoding="utf-8"?>
<instafel.app.ui.Page android:layout_width="fill_parent" android:layout_height="fill_parent"
                       xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <instafel.app.ui.PageTitle android:id="@+id/ifl_page_title" android:layout_width="fill_parent" android:layout_height="wrap_content" app:ifl_attr_ui_titleText="Ghost Mode" />
    <instafel.app.ui.PageContentArea android:layout_width="fill_parent" android:layout_height="0.0dip" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@id/ifl_page_title">
        
        <!-- Main Ghost Mode Toggle -->
        <instafel.app.ui.TileLargeSwitch 
            android:id="@+id/ifl_tile_ghost_mode_main" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
            app:ifl_attr_ui_spaceBottom="visible" 
            app:ifl_attr_ui_subtitleText="Enable or disable all ghost mode features" 
            app:ifl_attr_ui_titleText="Ghost Mode" />

        <!-- Section Title -->
        <instafel.app.ui.TileTitle 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_titleText="Ghost Mode Features" />

        <!-- Ghost Seen -->
        <instafel.app.ui.TileLargeSwitch 
            android:id="@+id/ifl_tile_ghost_seen" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
            app:ifl_attr_ui_spaceBottom="visible" 
            app:ifl_attr_ui_subtitleText="Hide read receipts in Direct Messages" 
            app:ifl_attr_ui_titleText="Ghost Seen (DM)" />

        <!-- Ghost Typing -->
        <instafel.app.ui.TileLargeSwitch 
            android:id="@+id/ifl_tile_ghost_typing" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
            app:ifl_attr_ui_spaceBottom="visible" 
            app:ifl_attr_ui_subtitleText="Hide typing indicator in Direct Messages" 
            app:ifl_attr_ui_titleText="Ghost Typing" />

        <!-- Ghost Screenshot -->
        <instafel.app.ui.TileLargeSwitch 
            android:id="@+id/ifl_tile_ghost_screenshot" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
            app:ifl_attr_ui_spaceBottom="visible" 
            app:ifl_attr_ui_subtitleText="Block screenshot detection notifications" 
            app:ifl_attr_ui_titleText="Ghost Screenshot" />

        <!-- Ghost ViewOnce -->
        <instafel.app.ui.TileLargeSwitch 
            android:id="@+id/ifl_tile_ghost_viewonce" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
            app:ifl_attr_ui_spaceBottom="visible" 
            app:ifl_attr_ui_subtitleText="View once messages without marking as seen" 
            app:ifl_attr_ui_titleText="Ghost ViewOnce" />

        <!-- Ghost Story -->
        <instafel.app.ui.TileLargeSwitch 
            android:id="@+id/ifl_tile_ghost_story" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
            app:ifl_attr_ui_spaceBottom="visible" 
            app:ifl_attr_ui_subtitleText="View stories anonymously" 
            app:ifl_attr_ui_titleText="Ghost Story" />

        <!-- Ghost Live -->
        <instafel.app.ui.TileLargeSwitch 
            android:id="@+id/ifl_tile_ghost_live" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
            app:ifl_attr_ui_spaceBottom="visible" 
            app:ifl_attr_ui_subtitleText="Watch live videos anonymously" 
            app:ifl_attr_ui_titleText="Ghost Live" />

        <!-- Quick Toggle Section -->
        <instafel.app.ui.TileTitle 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_titleText="Quick Toggle Options" />

        <!-- Quick Toggle Seen -->
        <instafel.app.ui.TileLargeSwitch 
            android:id="@+id/ifl_tile_quick_toggle_seen" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
            app:ifl_attr_ui_spaceBottom="visible" 
            app:ifl_attr_ui_subtitleText="Include in quick toggle" 
            app:ifl_attr_ui_titleText="Quick Toggle: Seen" />

        <!-- Quick Toggle Typing -->
        <instafel.app.ui.TileLargeSwitch 
            android:id="@+id/ifl_tile_quick_toggle_typing" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
            app:ifl_attr_ui_spaceBottom="visible" 
            app:ifl_attr_ui_subtitleText="Include in quick toggle" 
            app:ifl_attr_ui_titleText="Quick Toggle: Typing" />

        <!-- Quick Toggle Screenshot -->
        <instafel.app.ui.TileLargeSwitch 
            android:id="@+id/ifl_tile_quick_toggle_screenshot" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
            app:ifl_attr_ui_spaceBottom="visible" 
            app:ifl_attr_ui_subtitleText="Include in quick toggle" 
            app:ifl_attr_ui_titleText="Quick Toggle: Screenshot" />

        <!-- Quick Toggle ViewOnce -->
        <instafel.app.ui.TileLargeSwitch 
            android:id="@+id/ifl_tile_quick_toggle_viewonce" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
            app:ifl_attr_ui_spaceBottom="visible" 
            app:ifl_attr_ui_subtitleText="Include in quick toggle" 
            app:ifl_attr_ui_titleText="Quick Toggle: ViewOnce" />

        <!-- Quick Toggle Story -->
        <instafel.app.ui.TileLargeSwitch 
            android:id="@+id/ifl_tile_quick_toggle_story" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
            app:ifl_attr_ui_spaceBottom="visible" 
            app:ifl_attr_ui_subtitleText="Include in quick toggle" 
            app:ifl_attr_ui_titleText="Quick Toggle: Story" />

        <!-- Quick Toggle Live -->
        <instafel.app.ui.TileLargeSwitch 
            android:id="@+id/ifl_tile_quick_toggle_live" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
            app:ifl_attr_ui_spaceBottom="visible" 
            app:ifl_attr_ui_subtitleText="Include in quick toggle" 
            app:ifl_attr_ui_titleText="Quick Toggle: Live" />

    </instafel.app.ui.PageContentArea>
</instafel.app.ui.Page>
