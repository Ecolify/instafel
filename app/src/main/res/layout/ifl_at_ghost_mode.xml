<?xml version="1.0" encoding="utf-8"?>
<instafel.app.ui.Page android:layout_width="fill_parent" android:layout_height="fill_parent"
                       xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <instafel.app.ui.PageTitle android:id="@+id/ifl_page_title" android:layout_width="fill_parent" android:layout_height="wrap_content" app:ifl_attr_ui_titleText="@string/ifl_ghost_mode_title" />
    <instafel.app.ui.PageContentArea android:layout_width="fill_parent" android:layout_height="0.0dip" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@id/ifl_page_title">
        
        <!-- Main Ghost Mode Toggle -->
        <instafel.app.ui.TileLargeSwitch 
            android:id="@+id/ifl_tile_ghost_mode_main" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
            app:ifl_attr_ui_spaceBottom="visible" 
            app:ifl_attr_ui_subtitleText="@string/ifl_ghost_mode_desc" 
            app:ifl_attr_ui_titleText="@string/ifl_ghost_mode_title" />

        <!-- Section Title -->
        <instafel.app.ui.TileTitle 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_titleText="@string/ifl_ghost_features_section" />

        <!-- Ghost Seen -->
        <instafel.app.ui.TileLargeSwitch 
            android:id="@+id/ifl_tile_ghost_seen" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
