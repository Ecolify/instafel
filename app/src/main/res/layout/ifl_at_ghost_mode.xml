            app:ifl_attr_ui_subtitleText="@string/ifl_ghost_typing_desc" 
            app:ifl_attr_ui_titleText="@string/ifl_ghost_typing_title" />

        <!-- Ghost Screenshot -->
        <instafel.app.ui.TileLargeSwitch 
            android:id="@+id/ifl_tile_ghost_screenshot" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
            app:ifl_attr_ui_spaceBottom="visible" 
            app:ifl_attr_ui_subtitleText="@string/ifl_ghost_screenshot_desc" 
            app:ifl_attr_ui_titleText="@string/ifl_ghost_screenshot_title" />

