            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:ifl_attr_ui_iconRes="@drawable/ifl_misc" 
            app:ifl_attr_ui_spaceBottom="visible" 
            app:ifl_attr_ui_subtitleText="@string/ifl_quick_toggle_desc" 
            app:ifl_attr_ui_titleText="Quick Toggle: Screenshot" />

