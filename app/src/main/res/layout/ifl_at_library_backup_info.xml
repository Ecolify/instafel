<?xml version="1.0" encoding="utf-8"?>
<instafel.app.ui.Page
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="instafel.app.instafel.app.activity.about.ifl_a_about">

    <instafel.app.ui.PageTitle
        android:id="@+id/ifl_page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ifl_attr_ui_titleText="@string/ifl_a11_05" />

    <instafel.app.ui.PageContentArea
        android:visibility="visible"
        android:id="@+id/ifl_content_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ifl_page_title">

        <instafel.app.ui.TileLarge
            android:id="@+id/ifl_tile_backup_library_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ifl_attr_ui_iconRes="@drawable/ifl_tag"
            app:ifl_attr_ui_spaceBottom="visible"
            app:ifl_attr_ui_subtitleText="_name"
            app:ifl_attr_ui_titleText="@string/ifl_a11_06" />

        <instafel.app.ui.TileLarge
            android:id="@+id/ifl_tile_backup_library_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ifl_attr_ui_iconRes="@drawable/ifl_about"
            app:ifl_attr_ui_spaceBottom="visible"
            app:ifl_attr_ui_subtitleText="_desc"
            app:ifl_attr_ui_titleText="@string/ifl_a11_07" />

        <instafel.app.ui.TileLarge
            android:id="@+id/ifl_tile_backup_library_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ifl_attr_ui_iconRes="@drawable/ifl_version"
            app:ifl_attr_ui_spaceBottom="visible"
            app:ifl_attr_ui_subtitleText="_version"
            app:ifl_attr_ui_titleText="@string/ifl_a11_45" />

        <instafel.app.ui.TileLarge
            android:id="@+id/ifl_tile_backup_library_lastUpdated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ifl_attr_ui_spaceBottom="visible"
            app:ifl_attr_ui_iconRes="@drawable/ifl_ota_refresh_2"
            app:ifl_attr_ui_subtitleText="_lastUpdated"
            app:ifl_attr_ui_titleText="@string/ifl_a11_08" />

        <instafel.app.ui.TileLarge
            android:id="@+id/ifl_tile_backup_library_aboutAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ifl_attr_ui_enableSubIcon="visible"
            app:ifl_attr_ui_subIconRes="@drawable/ifl_open_in_browser"
            app:ifl_attr_ui_spaceBottom="visible"
            app:ifl_attr_ui_iconRes="@drawable/ifl_dev_circle"
            app:ifl_attr_ui_subtitleText="_authorSocials"
            app:ifl_attr_ui_titleText="@string/ifl_a11_16" />

        <instafel.app.ui.TileTitle
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ifl_attr_ui_titleText="@string/ifl_a11_11" />

        <instafel.app.ui.TileLarge
            android:id="@+id/ifl_tile_backup_library_applyBackup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ifl_attr_ui_iconRes="@drawable/ifl_approve_backup"
            app:ifl_attr_ui_spaceBottom="visible"
            app:ifl_attr_ui_subtitleText="@string/ifl_a11_14"
            app:ifl_attr_ui_titleText="@string/ifl_a11_10" />


        <instafel.app.ui.TileLarge
            android:id="@+id/ifl_tile_backup_library_changelog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ifl_attr_ui_iconRes="@drawable/ifl_changelog"
            app:ifl_attr_ui_spaceBottom="visible"
            app:ifl_attr_ui_subtitleText="_changelog"
            app:ifl_attr_ui_titleText="@string/ifl_a11_09" />

    </instafel.app.ui.PageContentArea>

    <instafel.app.ui.PageContentArea
        android:id="@+id/ifl_loading_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ifl_page_title">

        <ProgressBar
            style="@style/ifl_theme_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateBehavior="repeat"
            android:indeterminateTint="?ifl_attr_subtitle_color" />

    </instafel.app.ui.PageContentArea>
</instafel.app.ui.Page>
